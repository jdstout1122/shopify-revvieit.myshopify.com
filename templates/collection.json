{
  "sections": {
    "hero": {
      "type": "collection-image-with-title",
      "settings": {
        "show_title": true,
        "show_description": true,
        "text_color": "text-dark",
        "flex_align": "align--middle-center",
        "transparent": true,
        "show_image": false,
        "banner_layout": "inline",
        "height": "screen-height-one-half",
        "overlay_opacity": 0,
        "overlay_color": "#000000"
      }
    },
    "subcollections": {
      "type": "subcollections",
      "settings": {
        "subcollection_layout": "grid",
        "subcollection_description": true,
        "select_image": "collection"
      }
    },
    "main": {
      "type": "collection",
      "settings": {
        "enable_sort": true,
        "enable_filters": true,
        "filter_layout": "slide-out",
        "grid": 5,
        "grid_mobile": "2",
        "product_limit": 50
      }
    }
  },
  "order": [
    "hero",
    "subcollections",
    "main"
  ]
}